{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "groupName": "container images",
      "matchDatasources": ["docker"],
      "matchFileNames": ["**/MODULE.bazel"]
    },
    {
      "groupName": "Go dependencies",
      "matchManagers": ["gomod"]
    }
  ]
}
