    name = "protobuf",
    compilers = [
        "@rules_go//proto:go_proto",
    ],
    filenames = [
        "action_cache.pb.go",
        "command_line.pb.go",
        "failure_details.pb.go",
        "invocation_policy.pb.go",
        "option_filters.pb.go",
        "strategy_policy.pb.go",
    ],
    importpath = "github.com/bazel-contrib/rules_img/img_tool/pkg/proto/bazel/src/main/protobuf",
    proto = ":proto",
    visibility = ["//visibility:public"],
)
