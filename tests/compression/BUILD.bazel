load("@bazel_skylib//:bzl_library.bzl", "bzl_library")
load("@rules_img//img:layer.bzl", "image_layer")
load(":defs.bzl", "layer_combinations")

image_layer(
    name = "large_1GB",
    srcs = {
        "/1GB.bin": "@large_file_1GB//file",
    },
    tags = [
        "exclusive",
        "manual",
        "no-cache",
    ],
)

image_layer(
    name = "large_10GB",
    srcs = {
        "/10GB.bin": "@large_file_10GB//file",
    },
    tags = [
        "exclusive",
        "manual",
        "no-cache",
    ],
)

layer_combinations()

bzl_library(
    name = "defs",
    srcs = ["defs.bzl"],
    visibility = ["//visibility:public"],
    deps = [
        "@bazel_skylib//rules:build_test",
        "@rules_img//img:providers",
    ],
)

filegroup(
    name = "all_files",
    srcs = glob(["**"]),
    visibility = ["//img/private/release:__subpackages__"],
)
