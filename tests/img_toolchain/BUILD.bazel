load("@rules_go//go:def.bzl", "go_library", "go_test")

# gazelle:exclude_from_release

go_library(
    name = "img_toolchain",
    srcs = ["framework.go"],
    importpath = "github.com/tweag/rules_img/tests/img_toolchain",
    visibility = ["//visibility:public"],
    deps = [
        "@rules_go//go/runfiles",
    ],
)

go_test(
    name = "img_toolchain_test",
    size = "medium",
    srcs = ["img_toolchain_test.go"],
    data = [
        ":testcases",
        "//testdata:ubuntu_testdata",
        "@rules_img_tool//cmd/img",
    ],
    embed = [":img_toolchain"],
)

filegroup(
    name = "testcases",
    srcs = glob(["testcases/*.ini"]),
    visibility = ["//visibility:public"],
)

filegroup(
    name = "all_files",
    srcs = glob(["**"]),
    visibility = ["//img/private/release:__subpackages__"],
)

go_test(
    name = "lib_test",
    srcs = ["img_toolchain_test.go"],
    embed = [":img_toolchain"],
)
