    repository = "envoyproxy/envoy",
    tag = "v1.36.2",
)

pull(
    name = "neo4j",
    digest = "sha256:d8cb32426f618bb9a15a8847c42e5dade787e13cb2f1e63fee2a954c91a5bf73",
